# Flask configuration
FLASK_DEBUG=0            # Set to 1 to enable debug mode
SECRET_KEY=change_me      # Replace with a strong secret key
LOG_LEVEL=INFO
PORT=8000
ALLOWED_ORIGINS=http://example.com  # Comma separated list, leave empty to disable
#REDIS_URL=redis://localhost:6379/0
#DB_URL=sqlite:///database.db

# Admin credentials
admin_username=your_admin_username
